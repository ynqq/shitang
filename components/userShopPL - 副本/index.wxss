/* components/userShopPL/index.wxss */
.PL{
  height: 100%;
}
.plList{
  height: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.plItem{
  border-bottom: 2rpx solid #efefef;
}
.plItem:last-child{
  border: 0;
}
.plTop{
  display: flex;
  align-items: center;
}
.plHead{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
}
.plHead image{
  width: 100%;
  height: 100%;
}
.plUser{
  flex: 1;
  padding-left: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}
.plTime{
  font-size: 24rpx;
}
.plCenter{
  padding-left: 80rpx;
  box-sizing: border-box;
  margin: 20rpx 0;
}
.plPicList{
  padding-left: 80rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}
.plPicList image{
  flex: 0 0 48%;
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 20rpx;
}
.plPicList image:not(:nth-child(2n)){
  margin-right: 4%;
}