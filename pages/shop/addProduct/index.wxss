/* pages/user/updateUser/index.wxss */
page{
    background-color: #efefef;
}
.updateInfo{
    background-color: #fff;
    padding: 0 20rpx;
    box-sizing: border-box;
    margin-bottom: 20rpx;
}
.updateItem{
    display: flex;
    padding: 20rpx 0;
    border-bottom: 2rpx solid #fafafa;
}
.updateItem:last-child{
    border-bottom: 0;
}
.updateLabel{
    flex: 0 0 150rpx;
    width: 150rpx;
}
.updateValue{
    flex: 1;
    width: calc(100% - 150rpx);
    height: 100%;
    padding: 0 20rpx;
    box-sizing: border-box;
}
.updateValue input{
    width: 100%;
    height: 100%;
}
.updateValue textarea{
    width: 100%;
}

.submit{
    background: #1296db;
    color: #fff;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    width: calc(100% - 40rpx);
    margin-left: 20rpx;
    border-radius: 10rpx;
}

.choosePic{
    position: relative;
    width: 300rpx;
    height: 300rpx;
}
.addPic{
    position: relative;
    width: 100%;
    height: 100%;
    border: 2rpx solid #ccc;
}
.addPic:before{
    position: absolute;
    top: 50%;
    left: 5%;
    margin-top: -10rpx;
    content: '';
    display: block;
    width: 90%;
    height: 20rpx;
    border-radius: 10rpx;
    background:rgb(145, 141, 141);
}
.addPic:after{
    position: absolute;
    content: '';
    display: block;
    height: 90%;
    width: 20rpx;
    left: 50%;
    top: 5%;
    margin-left: -10rpx;
    border-radius: 10rpx;
    background:rgb(145, 141, 141);
}
.choosePic image{
    width: 100%;
    height: 100%;
}

.delete{
    position: absolute;
    right: 10rpx;
    top: 10rpx;

}
.delete image{
    width: 40rpx;
    height: 40rpx;
}