/* pages/user/order/index.wxss */

page {
  background: #efefef;
}

.orderList {
}

.orderItem {
  box-sizing: border-box;
  padding: 20rpx 20rpx;
  background: #fff;
  display: flex;
  width: 100%;
  color: #666;
  margin-bottom: 10rpx;
}

.orderLeft {
  flex: 0 0 100rpx;
  width: 100rpx;
}

.orderLeft image {
  width: 70rpx;
  height: 70rpx;
}

.orderRight {
  flex: 1;
  width: calc(100% - 100rpx);
}

.rightTop {
  display: flex;
  width: 100%;
  border-bottom: 2rpx solid#efefef;
  padding-bottom:20rpx;
}

.shopName {
  width: 60%;
  flex: 0 0 60%;
  font-size: 32rpx;
  color: #333;
}

.textname {
  width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.time {
  font-size: 24rpx;
  color: #666;
}

.shopState {
  flex: 1;
  font-size: 24rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.rightBottom {
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid#efefef;
  padding: 20rpx 0;
}

.price {
  color: #333;
  font-weight: bolder;
}

.pingjia {
  margin-top: 40rpx;
  display: flex;
  justify-content: flex-end;
}

.btnPj {
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 6rpx;
  color: #1296db;
  border: 2rpx solid #1296db;
  box-sizing: border-box;
}
