/* pages/user/index/index.wxss */

.index {
}

.top {
  height: 100rpx;
  display: flex;
  padding: 0 20rpx;
  box-sizing: border-box;
  align-items: center;
}

.searchBox {
  flex: 1;
}

.searchBox .inputText {
  width: 100%;
  background: #fafafa;
  text-align: center;
  line-height: 60rpx;
  border-radius: 20rpx;
  color: #666;
}

.saoma {
  flex: 0 0 100rpx;
  display: flex;
  justify-content: center;
}

.saoma image {
  width: 32rpx;
  height: 32rpx;
}

.swiper {
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 400rpx;
  border-radius: 30rpx;
  overflow: hidden;
}

swiper {
  height: 100%;
}

.swiper image {
  width: 710rpx;
  height: 400rpx;
}

.tuijian {
  margin-top: 30rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.tuijianTitle {
  color: #1296db;
  font-size: 32rpx;
  font-weight: bolder;
  height: 60rpx;
  line-height: 60rpx;
}

.tuijianList {
}

.tuijianItem {
  display: flex;
  border-bottom: 2rpx solid #efefef;
  padding: 25rpx 0;
}
.tuijianItem:last-child{
  border: 0;
}

.itemLeft {
  flex: 0 0 150rpx;
  width: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.itemLeft image {
  width: 150rpx;
  height: 150rpx;
}

.itemRight {
  flex: 1;
  width: calc(100% - 150rpx);
  padding-left: 20rpx;
  box-sizing: border-box;
  color: #666;
}

.shopName {
  width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 32rpx;
  font-weight: bolder;
  color: #333;
}

.pinglun {
  display: flex;
  font-size: 24rpx;
  height: 40rpx;
  align-items: center;
}

.star {
  margin-right: 20rpx;
}

.star image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}

.shopInfo {
  width: 100%;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #999;
}
