            </view>
            <view class="orderItem">
                <view class="orderLabel">订单号</view>
                <view class="orderValue">111111111</view>
            </view>
            <view class="orderItem">
                <view class="orderLabel">下单时间</view>
                <view class="orderValue">2020-20-20</view>
            </view>
        </view>
    </view>
