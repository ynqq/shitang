			<view class="shopLogo">
				<image src="/static/img/demo.jpg"></image>
			</view>
			<view class="shopText">黄焖鸡米饭</view>
			<view class="shopIcon">
				<image src="/static/img/xiangyou.png"></image>
			</view>
		</view>
		<view class="shopList">
			<view class="shopItem" wx:for="{{[1,2,2,2,2,2]}}" wx:key="*this">
